<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/taca_crazy_drivers"
            android:id="@+id/textView" android:layout_gravity="center" android:textSize="22dp"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/campeonato_equipes"
            android:id="@+id/textView1" android:layout_gravity="center" android:textSize="18dp"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Alto Giro Racing - 25 pontos"
            android:id="@+id/textView2" android:layout_gravity="left|center_vertical" android:textSize="16dp"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tara Champion - 23 pontos"
            android:id="@+id/textView3" android:layout_gravity="left|center_vertical" android:textSize="16dp"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bazinga Empurra Que Pega - 15 pontos"
            android:id="@+id/textView4" android:layout_gravity="left|center_vertical" android:textSize="16dp"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dragon Speed Race - 15 pontos"
            android:id="@+id/textView5" android:layout_gravity="left|center_vertical" android:textSize="16dp"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Parafix"
            android:id="@+id/textView6" android:layout_gravity="left|center_vertical" android:textSize="16dp"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="W. J. Motors"
            android:id="@+id/textView7" android:layout_gravity="left|center_vertical" android:textSize="16dp"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/last_update"
            android:id="@+id/textView8" android:layout_gravity="center"/>
</LinearLayout>